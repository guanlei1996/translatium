    "prop-types": "15.6.2",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-redux": "6.0.0",
    "react-scripts": "2.1.3",
    "recordrtc": "5.5.3",
    "redux": "4.0.1",
