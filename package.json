    "electron-settings": "3.2.0",
    "http-proxy-middleware": "0.19.1",
    "menubar": "5.2.3",
    "mocha": "^5.2.0",
    "spectron": "^5.0.0"
  },
  "devDependencies": {
    "@material-ui/core": "3.9.0",
    "@material-ui/icons": "3.0.2",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "classnames": "2.2.6",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
